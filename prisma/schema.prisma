generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:memory:"
}

model WhiteList {
  id       Int    @id @default(autoincrement()) // PK
  name     String // 사용자 이름
  regNo    String @map("reg_no") // 사용자 주민등록번호
  regNoIv  String @map("reg_no_iv") // 주민등록번호 암호화 IV

  @@map("white_list")
}

model Account {
  id          Int     @id @default(autoincrement()) // PK
  userId      String  @map("user_id")// 사용자 아이디
  password    String  // 사용자 비밀번호
  name        String  // 사용자 이름
  regNo       String  @map("reg_no")// 사용자 주민등록번호
  regNoIv     String  @map("reg_no_iv")// 사용자 주민등록번호 암호화 IV
  isActivated Boolean @default(true) @map("is_activated") // 사용자 활성화 여부
  createDate  DateTime @default(now()) @map("create_date") // 생성 날짜
  updateDate  DateTime @updatedAt @map("update_date") // 수정 날짜

  @@map("account")
}

